#include <stdio.h>
#include <string.h>

#define MAX 100

struct Contato {
    char nome[50];
    char telefone[20];
    char email[50];
};

void adicionar(struct Contato contatos[], int *n) {
    printf("Nome: ");
    scanf(" %[^\n]", contatos[*n].nome);
    printf("Telefone: ");
    scanf(" %[^\n]", contatos[*n].telefone);
    printf("Email: ");
    scanf(" %[^\n]", contatos[*n].email);
    (*n)++;
}

void buscar(struct Contato contatos[], int n) {
    char nome[50];
    int i, encontrado = 0;
    printf("Digite o nome para buscar: ");
    scanf(" %[^\n]", nome);
    for (i = 0; i < n; i++) {
        if (strcmp(contatos[i].nome, nome) == 0) {
            printf("Nome: %s\n", contatos[i].nome);
            printf("Telefone: %s\n", contatos[i].telefone);
            printf("Email: %s\n", contatos[i].email);
            encontrado = 1;
            break;
        }
    }
    if (!encontrado) {
        printf("Contato nÃ£o encontrado.\n");
    }
}

void exibir(struct Contato contatos[], int n) {
    for (int i = 0; i < n; i++) {
        printf("Nome: %s\n", contatos[i].nome);
        printf("Telefone: %s\n", contatos[i].telefone);
        printf("Email: %s\n\n", contatos[i].email);
    }
}

int main() {
    struct Contato contatos[MAX];
    int n = 0, opcao;

    do {
        printf("1. Adicionar contato\n");
        printf("2. Buscar por nome\n");
        printf("3. Exibir todos\n");
        printf("0. Sair\n");
        scanf("%d", &opcao);

        switch (opcao) {
            case 1:
                if (n < MAX) adicionar(contatos, &n);
                else printf("Limite de contatos atingido.\n");
                break;
            case 2:
                buscar(contatos, n);
                break;
            case 3:
                exibir(contatos, n);
                break;
        }
    } while (opcao != 0);

    return 0;
}